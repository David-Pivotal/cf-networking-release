#!/bin/bash

set -e
set -u

mkdir -p ${BOSH_INSTALL_TARGET}/bin
mkdir -p /opt/cni/bin
cp -a . ${BOSH_INSTALL_TARGET}/src

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export GOPATH=$BOSH_INSTALL_TARGET
export PATH=$GOROOT/bin:$GOPATH/bin:$PATH

go install -o /opt/cni/bin/host-local github.com/containernetworking/plugins/plugins/ipam/host-local
go install -o /opt/cni/bin/silk-cni ldflags="-extldflags=-Wl,--allow-multiple-definition" code.cloudfoundry.org/silk/cmd/silk-cni
