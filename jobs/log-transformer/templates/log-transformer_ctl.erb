#!/bin/bash -eu

source /var/vcap/packages/ctl-utils/ctl_util.sh

export RUN_DIR=/var/vcap/sys/run/log-transformer
export LOG_DIR=/var/vcap/sys/log/log-transformer
export PIDFILE="${RUN_DIR}"/log-transformer.pid
export CONF_DIR=/var/vcap/jobs/log-transformer/config
export TIMEOUT=20

mkdir -p "${RUN_DIR}"
mkdir -p "${LOG_DIR}"

exec 1>> "${LOG_DIR}"/log-transformer_ctl.out.log
exec 2>> "${LOG_DIR}"/log-transformer_ctl.err.log

case $1 in

  start)

    exec 2> >(tee -a "${LOG_DIR}"/log-transformer.stderr.log | logger -p user.error -t log-transformer) \
          1> >(tee -a "${LOG_DIR}"/log-transformer.stdout.log | logger -t log-transformer)

    echo $$ > "${PIDFILE}"

    exec /var/vcap/packages/log-transformer/bin/log-transformer \ -config-file=/var/vcap/jobs/log-transformer/config/log-transformer.json

    ;;

  stop)

    stop_process

    ;;

  *)
    echo "Usage: $0 {start|stop}"

    ;;

esac
