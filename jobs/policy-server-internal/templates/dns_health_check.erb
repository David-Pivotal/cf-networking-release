<% unless p("cf_networking.disable") %>
<%
  def ip
    p("cf_networking.policy_server_internal.listen_ip")
  end

  def port
    p("cf_networking.policy_server_internal.listen_port")
  end
%>

curl <%= ip %>:<%= port %>/health \
  --connect-timeout <%= p("cf_networking.policy_server_internal.connect_timeout_seconds") %>
<% end %>
